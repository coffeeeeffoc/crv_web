  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "boot": "lerna bootstrap && lerna link",
    "clean": "lerna clean --yes",
    "stop": "kill-port 3015 3016 3017",
    "dev:all": "yarn stop && cross-env BROWSER=none lerna exec --scope @crv/{model_config,form_config,model_view} -- yarn start",
    "dev:log": "yarn stop && cross-env BROWSER=none lerna exec --scope @crv/{model_config,form_config,model_view} --concurrency 4 --stream -- yarn start",
    "build": "cross-env lerna run build",
    "mc": "kill-port 3015 && cross-env BROWSER=none lerna exec --scope @crv/model_config -- yarn start",
    "fc": "kill-port 3016 && cross-env BROWSER=none lerna exec --scope @crv/form_config -- yarn start",
    "mv": "kill-port 3017 && cross-env BROWSER=none lerna exec --scope @crv/model_view -- yarn start",
    "lint": "lerna run lint",
    "test": "lerna run test --stream"
  },
  "dependencies": {
    "@ant-design/icons": "^4.6.3",
    "@types/file-saver": "^2.0.3",
    "@types/lodash": "^4.14.172",
