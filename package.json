    "@types/file-loader": "^5.0.1",
    "@types/react-window": "^1.8.5",
    "@types/styled-components": "^5.1.18",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-styled-components": "^2.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.1.0",
    "husky": "^7.0.2",
    "jsonc-parser": "^3.0.0",
