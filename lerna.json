{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        ".gitignore",
        "*.log",
        "*.md"
      ]
    },
    "bootstrap": {
      "ignore": "npm-*",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
